{
    "name": "Time save test",
    "description": "Time save test",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "scripting",
        "storage",
        "notifications",
        "webRequest"
    ],
    "host_permissions": [
        "<all_urls>"
    ],

    "content_scripts": [{
        "matches": ["https://au-lti.bbcollab.com/*"],
        "js": ["content-script.js"],
        "run_at": "document_end"
    }],
    "web_accessible_resources": [{
        "resources": [
            "intercept.js"
        ],
        "matches": ["https://au-lti.bbcollab.com/*"]
    }],
    "background": {
        "service_worker": "background.js"
    }
}